<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutResultList"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewResultListRoomThumbnail"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:src="@drawable/default_image"/>

    <TextView
        android:id="@+id/textViewResultListRoomAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/imageViewResultListRoomThumbnail"
        android:layout_toRightOf="@+id/imageViewResultListRoomThumbnail"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:text="Room Address"
        android:textSize="16dp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/textViewResultListRoomRental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageViewResultListRoomThumbnail"
        android:layout_below="@+id/textViewResultListRoomAddress"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="RM400 / Month"
        android:textSize="16dp"
        android:textColor="#1a237e"/>

    <TextView
        android:id="@+id/textViewResultListRoomSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageViewResultListRoomThumbnail"
        android:layout_below="@+id/textViewResultListRoomAddress"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp"
        android:text="300m2"
        android:textSize="16dp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/textViewResultListRoomViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageViewResultListRoomThumbnail"
        android:layout_below="@+id/textViewResultListRoomRental"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="130 Views"
        android:textSize="16dp"/>

    <ImageView
        android:id="@+id/imageViewResultListLineSeparator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/imageViewResultListRoomThumbnail"
        android:src="#3f51b5"/>

    <ImageView
        android:id="@+id/imageViewResultListProceed"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageViewResultListRoomThumbnail"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_action_proceed"/>
</RelativeLayout>